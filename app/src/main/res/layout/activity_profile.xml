<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="205dp"
        android:layout_height="115dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="108dp"
        android:src="@drawable/profileimagee"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="192dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="-31dp"
        android:layout_marginBottom="537dp"
        android:background="#7FA87F" />

    <TextView
        android:id="@+id/tvProfile"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="142dp"
        android:fontFamily="@font/kavoon"
        android:text="Profile"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvTitlee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="70dp"
        android:fontFamily="@font/kavoon"
        android:text="UniBudget"
        android:textColor="#000000"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="127dp" />

    <View
        android:id="@+id/nameBox"
        android:layout_width="255dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="228dp"
        android:background="#CDFCB5" />

    <TextView
        android:id="@+id/logName"
        android:layout_width="248dp"
        android:layout_height="44dp"
        android:layout_alignStart="@+id/nameBox"
        android:layout_alignTop="@+id/nameBox"
        android:layout_alignEnd="@+id/nameBox"
        android:layout_alignBottom="@+id/nameBox"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="-1dp"
        android:fontFamily="@font/allerta"
        android:text="Rodney Ace"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="18sp" />

    <View
        android:id="@+id/premailBox"
        android:layout_width="259dp"
        android:layout_height="51dp"
        android:layout_below="@id/nameBox"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="282dp"
        android:background="#CDFCB5" />

    <TextView
        android:id="@+id/logPrEmail"
        android:layout_width="265dp"
        android:layout_height="28dp"
        android:layout_alignStart="@+id/premailBox"
        android:layout_alignTop="@+id/premailBox"
        android:layout_alignEnd="@+id/premailBox"
        android:layout_alignBottom="@+id/premailBox"
        android:layout_centerInParent="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="-8dp"
        android:layout_marginBottom="7dp"
        android:fontFamily="@font/allerta"
        android:text="Rodney1.Ace@famu.edu"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="18sp" />

    <View
        android:id="@+id/daibgBox"
        android:layout_width="259dp"
        android:layout_height="44dp"
        android:layout_below="@id/premailBox"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="340dp"
        android:background="#CDFCB5" />

    <TextView
        android:id="@+id/logdaiBg"
        android:layout_width="247dp"
        android:layout_height="41dp"
        android:layout_alignStart="@+id/daibgBox"
        android:layout_alignTop="@+id/daibgBox"
        android:layout_alignEnd="@+id/daibgBox"
        android:layout_alignBottom="@+id/daibgBox"
        android:layout_centerInParent="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/allerta"
        android:text="Daily Budget Goal: $15"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="18sp" />


    <View
        android:id="@+id/wkgBox"
        android:layout_width="257dp"
        android:layout_height="45dp"
        android:layout_below="@id/daibgBox"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="394dp"
        android:background="#CDFCB5" />

    <TextView
        android:id="@+id/logWkg"
        android:layout_width="245dp"
        android:layout_height="33dp"
        android:layout_alignStart="@+id/wkgBox"
        android:layout_alignTop="@+id/wkgBox"
        android:layout_alignEnd="@+id/wkgBox"
        android:layout_alignBottom="@+id/wkgBox"
        android:layout_centerInParent="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/allerta"
        android:text="Weekly Budget Goal: $100"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="18sp" />


    <View
        android:id="@+id/mthgBox"
        android:layout_width="259dp"
        android:layout_height="54dp"
        android:layout_below="@id/daibgBox"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="448dp"
        android:background="#CDFCB5" />

    <TextView
        android:id="@+id/logMthg"
        android:layout_width="266dp"
        android:layout_height="82dp"
        android:layout_alignStart="@+id/mthgBox"
        android:layout_alignTop="@+id/mthgBox"
        android:layout_alignEnd="@+id/mthgBox"
        android:layout_alignBottom="@+id/mthgBox"
        android:layout_centerInParent="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="9dp"
        android:fontFamily="@font/allerta"
        android:text="Monthly Budget Goal: $950"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="18sp" />



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menu_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_bottom_navigation" />

    <Button
        android:id="@+id/Edtbutton"
        android:layout_width="119dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="111dp"
        android:background="#7FA87F"
        android:text="@string/edit"
        android:textSize="17sp" />

    <Button
        android:id="@+id/notiButton"
        android:layout_width="133dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="110dp"
        android:layout_toStartOf="@+id/Edtbutton"
        android:layout_toLeftOf="@id/Edtbutton"
        android:background="#7FA87F"
        android:text="Notifcations"
        android:textSize="16sp" />

    <Button
        android:id="@+id/logOtbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="163dp"
        android:layout_marginBottom="54dp"
        android:background="#7FA87F"
        android:text="@string/logout"
        android:textSize="16sp" />

</RelativeLayout>