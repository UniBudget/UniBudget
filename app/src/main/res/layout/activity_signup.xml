<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bgSignup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7FA87F"
    tools:context=".SignupActivity">

    <View
        android:id="@+id/tvSignupbox"
        android:layout_width="255dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="86dp"
        android:layout_marginTop="509dp"
        android:background="#CDFCB5" />

    <TextView
        android:id="@+id/tvSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="184dp"
        android:fontFamily="@font/allerta"
        android:hint="sign up"
        android:textAlignment="viewStart"
        android:textColor="#787676"
        android:textSize="18sp" />

    <View
        android:id="@+id/passBox"
        android:layout_width="254dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="433dp"
        android:background="#CDFCB5" />

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="255dp"
        android:fontFamily="@font/allerta"
        android:hint="password"
        android:textAlignment="viewStart"
        android:textColor="#787676"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvTitlee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:fontFamily="@font/kavoon"
        android:text="UniBudget"
        android:textColor="#000000"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="127dp" />

    <TextView
        android:id="@+id/tvnewMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="184dp"
        android:fontFamily="@font/kavoon"
        android:text="new member"
        android:textColor="#000000"
        android:textSize="30sp" />

    <View
        android:id="@+id/tvfNamebox"
        android:layout_width="249dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="280dp"
        android:background="#CDFCB5" />

    <View
        android:id="@+id/tvLnamebox"
        android:layout_width="253dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="359dp"
        android:background="#CDFCB5" />

    <TextView
        android:id="@+id/tvLname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="94dp"
        android:layout_marginBottom="325dp"
        android:fontFamily="@font/allerta"
        android:hint="last name"
        android:textAlignment="viewStart"
        android:textColor="#787676"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvFname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="408dp"
        android:fontFamily="@font/allerta"
        android:hint="first name"
        android:textAlignment="viewStart"
        android:textColor="#514D4D"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="98dp"
        android:background="#CDFCB5"
        android:fontFamily="@font/allerta"
        android:text="sign up"
        android:textColor="#272424" />

    <Button
        android:id="@+id/btnLogn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:background="#CDFCB5"
        android:fontFamily="@font/allerta"
        android:text="login"
        android:textColor="#000000"
        android:textSize="12sp" />
</RelativeLayout>