<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="122dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="-31dp"
            android:layout_marginBottom="654dp"
            android:background="#7FA87F" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="203dp"
            android:layout_height="59dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="64dp"
            android:fontFamily="@font/kavoon"
            android:text="Profile Edit"
            android:textColor="#000000"
            android:textSize="27sp" />

        <TextView
            android:id="@+id/tvTitlee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="70dp"
            android:fontFamily="@font/kavoon"
            android:text="UniBudget"
            android:textColor="#000000"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="127dp" />

        <EditText
            android:id="@+id/tvDailyBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="125dp"
            android:fontFamily="@font/kavoon"
            android:hint="Daily Budget: $15"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/tvWBGoals"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="163dp"
            android:layout_marginEnd="133dp"
            android:fontFamily="@font/kavoon"
            android:hint="Weekly Budget Goals: $100"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/tvInput1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvWBGoals"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="-1dp"
            android:fontFamily="@font/kavoon"
            android:hint="Groceries: $100"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/tvInput2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvInput1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/kavoon"
            android:hint="Gas: $30"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/tvInput3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvInput2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/kavoon"
            android:hint="Savings: $10"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/tvInput4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvInput3"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/kavoon"
            android:hint="Extra: $35"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/tvMBGoals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvInput4"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="-6dp"
            android:fontFamily="@font/kavoon"
            android:hint="Monthly Budget Goals: $950"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/tvInput5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMBGoals"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/kavoon"
            android:hint="Rent: $450"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/tvInput6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvInput5"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/kavoon"
            android:hint="Car note: $200"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/tvInput7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvInput6"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/kavoon"
            android:hint="Gas: $120"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/tvInput8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvInput7"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/kavoon"
            android:hint="Groceries: $100"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/tvInput9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvInput8"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/kavoon"
            android:hint="Savings: $40"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/tvInput10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvInput9"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/kavoon"
            android:hint="Extra: $40"
            android:textColor="#000000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="106dp"
            android:layout_height="43dp"
            android:layout_below="@+id/btnBack"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="141dp"
            android:layout_marginBottom="1dp"
            android:background="#CDFCB5"
            android:fontFamily="@font/allerta"
            android:text="save"
            android:textColor="#272424" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvInput10"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="142dp"
            android:background="#CDFCB5"
            android:fontFamily="@font/allerta"
            android:text="back"
            android:textColor="#000000"
            android:textSize="12sp" />


    </RelativeLayout>
</ScrollView>





